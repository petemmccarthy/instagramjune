<article class='post col-sm-6 col-md-4'>

	<div class="panel panel-default">
	  <div class="panel-heading">
	    <h3><%= post.title %></h3>
	  </div>
	 <div class="panel-body">


		<% if post.picture.present? %>
			<%= image_tag post.picture.url(:medium), class: 'uploaded-pic' %>
			<% end %>

			<section class='tags hidden-xs'>
				<% post.tags.each do |tag| %>
					<%= link_to tag.text, tag %> <!-- the tag is actually the same as tag_path(tag) -->
				<% end %>

				<% unless post.address.blank? %>
				<%= link_to 'Map', post_map_path(post), class: 'btn btn-danger' %>
				<% end %>
			</section>
	  </div>
	</div>

</article>