<% if @posts.any? %>
		
	<% @posts.in_groups_of(3, false) do |post_triplet| %>	
		<section class='row'>
			<%= render post_triplet %>
		</section>
	<% end %>
	
	<% else %>
		No posts yet	
<% end %>

<%= link_to new_post_path, class: 'btn btn-lg btn-success' do %>
  <span class='hidden-xs'>New post</span>
  <span class="glyphicon glyphicon-pencil"></span>
<% end %>